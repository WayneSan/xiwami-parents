<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label></label>
    </div>
    <div class="col-xs-10 col-md-6">
        
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label><span class="required">*</span>Title:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        {{input class="edit_box" placeholder="10 words or less" value=title size="60"}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label><span class="required">*</span>Description:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        {{textarea class="edit_box" rows="5" cols="61" value=description}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>Web URL:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        {{input class="edit_box" value=url size="60"}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>Date:</label>
    </div>
    <div class="col-xs-10 col-md-2">
        From:
        {{bs-datetimepicker date=fromTimeMoment format='YYYY-MM-DD'}}
        To:
        {{bs-datetimepicker date=toTimeMoment format='YYYY-MM-DD'}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>
            Upload Image:
        </label>
    </div>
    <div class="col-xs-10 col-md-11">
        {{view 'file-upload-view' contentBinding="imageData"}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>Type:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        {{view "select" class="btn btn-default dropdown-toggle" prompt="Select Type" content=allTypes optionValuePath="content.value" optionLabelPath="content.text" value=type}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>Age:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        From {{view "select" class="btn btn-default dropdown-toggle" valueBinding="fromAge" content=allAgesOld }}
        To {{view "select" class="btn btn-default dropdown-toggle" valueBinding="toAge" content=allAgesOld}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>Price:</label>
    </div>
    <div class="col-xs-4 col-md-3">
        <div class="input-group">
            <div class="input-group-addon">$</div>
            {{input class="form-control" placeholder="Price in US dollar" value=price size="40"}}
            <div class="input-group-addon">.00</div>
        </div>
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>Address:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        {{input class="edit_box" value=address size="40"}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>City:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        {{input class="edit_box" value=city}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>State:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        {{view "select" class="btn btn-default dropdown-toggle" prompt="Select State" content=allStates value=state}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>Zip Code:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        {{input class="edit_box" value=zipCode}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-10 col-xs-offset-2 col-md-6 col-md-offset-1">
        <button type="button" class="btn btn-primary btn-sm" {{action "save" }} {{bind-attr disabled=disabled}}>Save</button>
        <button type="button" class="btn btn-link btn-sm" {{action "cancel" }}>Cancel</button>
    </div>
</div>