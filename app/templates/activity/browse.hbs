<div class="row row-xs-height">
    <div class="col-xs-12">
        {{filter-selector model=allTypes apiFilterSelected="loadByType" showMisc="1"}}
    </div>
</div>

<div class="row row-xs-height">
    <div class="col-xs-12">
        {{filter-selector model=allStatus apiFilterSelected="loadByStatus"}}
    </div>
</div>

<div class="row row-xs-height">
    <div class="col-xs-12">
        <table class="table table-hover">
            <thead>
            <th></th>
            <th>Name</th>
            <th>Type</th>
            <th>Price</th>
            <th>Posted Date</th>
            <th>Age Range</th>
            </thead>
            <tbody>
                {{#each event in model}}
                <tr>
                    <td>{{view "previewImage" width="80" height="80" class="img-responsive img-thumbnail" src=event.availableImage}}</td>
                    <td>{{event.title}}</td>
                    <td>{{event.type}}</td>
                    <td>{{event.trueCost}}</td>
                    <td>{{formatted-date event.createdDate 'LL'}}</td>
                    <td>{{event.ageRange}}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="...">
                            {{#link-to 'activity.show' event class="btn btn-default"}}Detail{{/link-to}}
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
