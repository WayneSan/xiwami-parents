<h2>My Activities</h2>

<div class="row row-xs-height">
    <div class="col-xs-12">
        {{#link-to 'activity.new' class="btn btn-primary"}}Add New Activity{{/link-to}}
    </div>
</div>

<div class="row row-xs-height">
    <div class="col-lg-12">
        <div class="btn-group" data-toggle="buttons">
            <a class="btn btn-info active" data-toggle="tab" {{ action 'loadData' 'upcoming' }}>
                <input type="radio">Upcoming
            </a>
            <a class="btn btn-info" data-toggle="tab" {{ action 'loadData' 'past' }}>
                <input type="radio">Past
            </a>
        </div>
        <div class="btn-group" data-toggle="buttons">
            <a class="btn btn-info active" data-toggle="tab" {{ action 'loadData' 'birthday' }}>
                <input type="radio">Birthdays
            </a>
            <a class="btn btn-info" data-toggle="tab" {{ action 'loadData' 'fun' }}>
                <input type="radio">Fun
            </a>
            <a class="btn btn-info" data-toggle="tab" {{ action 'loadData' 'book' }}>
                <input type="radio">Literary and Books
            </a>
            <a class="btn btn-info" data-toggle="tab" {{ action 'loadData' 'sport' }}>
                <input type="radio">Sports
            </a>
            <a class="btn btn-info" data-toggle="tab" {{ action 'loadData' 'venue' }}>
                <input type="radio">Museums &Aacute; Venus
            </a>
            <a class="btn btn-info" data-toggle="tab" {{ action 'loadData' 'misc' }}>
                <input type="radio">Misc
            </a>
        </div>
    </div>
</div>

<div class="row row-xs-height">
    <div class="col-xs-12">
        <table class="table">
            <thead>
            <th>Title</th>
            <th>Description</th>
            <th>Type</th>
            <th>From</th>
            <th>To</th>
            <th>Location</th>
            </thead>
            <tbody>
                {{#each activity in model}}
                <tr>
                    <td>{{activity.title}}</td>
                    <td>{{activity.description}}</td>
                    <td>{{activity.type}}</td>
                    <td>{{formatted-date activity.fromTime 'LL'}}</td>
                    <td>{{formatted-date activity.toTime 'LL'}}</td>
                    <td>{{activity.location}}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="...">
                            {{#link-to 'activity.show' activity class="btn btn-default"}}Detail{{/link-to}}
                            <button type="button" class="btn btn-default" {{action 'openDeleteDialog' activity.id target="view" bubbles="false" }}>Delete</button>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div id="dialog-confirm-delete" title="Delete an activity?">
    <p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>This activity will be deleted. Are you sure?</p>
</div>


