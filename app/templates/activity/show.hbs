{{#if session.isAuthenticated}}
<div class="row row-xs-height">
    <div class="col-xs-6 col-sm-4 col-md-2">
        {{#link-to 'activity.my'}}<< back to list{{/link-to}}
    </div>
    <div class="col-xs-6 col-sm-4 col-md-2">
        {{#link-to 'activity.edit' id}}Edit{{/link-to}}
    </div>
    <div class="col-xs-4">
        <div class="fb-share-button" {{bind-attr data-href="tipUrl" }} data-layout="button_count"></div>
    </div>
</div>
{{/if}}
<div class="row row-xs-height">
    <div class="col-xs-3 col-sm-2 col-md-1">
        <label></label>
    </div>
    <div class="col-xs-9 col-sm-10 col-md-6">
        {{#if imageUrl }}
        <img {{bind-attr src=imageUrl}} alt="image" />
        {{else}}
        {{view "previewImage" width="200" height="200" srcBinding=availableImage}}
        {{/if}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-3 col-sm-2 col-md-1">
        <label>Title:</label>
    </div>
    <div class="col-xs-9 col-sm-10 col-md-6">
        {{title}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-3 col-sm-2 col-md-1">
        <label>Web URL:</label>
    </div>
    <div class="col-xs-9 col-sm-10 col-md-6">
        <a {{bind-attr href=url}} target="_blank">{{url}}</a>
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-3 col-sm-2 col-md-1">
        <label>Description:</label>
    </div>
    <div class="col-xs-9 col-sm-10 col-md-6">
        {{description}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-3 col-sm-2 col-md-1">
        <label>Date:</label>
    </div>
    <div class="col-xs-9 col-sm-10 col-md-6">
        From:
        {{formatted-date fromTime 'LL'}}
        To:
        {{formatted-date toTime 'LL'}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>Age:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        From {{fromAge}}
        To {{toAge}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>Price:</label>
    </div>
    <div class="col-xs-4 col-md-3">
        <div class="input-group">
            {{price}}
        </div>
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-3 col-sm-2 col-md-1">
        <label>Address:</label>
    </div>
    <div class="col-xs-9 col-sm-10 col-md-6">
        {{address}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-3 col-sm-2 col-md-1">
        <label>City:</label>
    </div>
    <div class="col-xs-9 col-sm-10 col-md-6">
        {{city}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-3 col-sm-2 col-md-1">
        <label>State:</label>
    </div>
    <div class="col-xs-9 col-sm-10 col-md-6">
        {{state}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-3 col-sm-2 col-md-1">
        <label>Zip Code:</label>
    </div>
    <div class="col-xs-9 col-sm-10 col-md-6">
        {{zipCode}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-3 col-sm-2 col-md-1">
        <label>Type:</label>
    </div>
    <div class="col-xs-9 col-sm-10 col-md-6">
        {{display-text type allTypesHash}}
    </div>
</div>
