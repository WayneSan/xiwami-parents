<div class="container">
  <div class="col-md-6">
    <h3><center>Member Updates</center></h3>

      <form {{action "updateMember" on="submit"}}>
        {{input-form label="First Name" value=model.firstName type="text"}}

        {{input-form label="Last Name" value=model.lastName type="text"}}

        {{input-form label="Email" value=model.email type="email"}}

        {{input-form label="Password" value=model.password type="text"}}

        {{input-form label="Facebook ID" value=model.facebookId type="text"}}

        {{input-form label="City" value=model.city type="text"}}

        {{input-form label="State" value=model.state type="text"}}

        {{input-form label="Zipcode" value=model.zipCode type="text"}}

        {{input-form label="Registration Date" value=model.created type="text"}}

        <button {{action 'updateMember' model}} class="btn btn-cys">{{fa-icon 'save'}}</button>
        {{#link-to 'admin.members' class="btn btn-default"}}{{fa-icon "times"}}{{/link-to}}
      </form>
  </div>
</div>






