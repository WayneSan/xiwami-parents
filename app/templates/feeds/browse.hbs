<div class="row row-gutter-bottom row-gutter-top">
    <div class="col-xs-12">
        <h2>
            Activities from Ann Arbor, MI
        </h2>
    </div>
</div>

<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-md-8">

        {{postbox-fake action='hidePostBoxFake' isHidingPostBoxFake=isHidingPostBoxFake}}

    </div>
</div>

<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-md-8">

        {{postbox-real action='hidePostBoxReal' isHidingPostBoxReal=isHidingPostBoxReal}}

    </div>
</div>

{{#each feed in model}}
    <div class="row row-gutter-bottom">
        <div class="col-xs-12">
            <hr style="border-width:4px" />
        </div>
    </div>
    <div class="row row-gutter-bottom">
        <div class="col-xs-1">
            {{#link-to 'member.show' feed.creator}}
                <img class="avatar" src={{feed.creator.availableImage}}>
            {{/link-to}}
        </div>
        <div class="col-xs-11">
            <div class="row row-gutter-bottom">
                <div class="col-xs-12">
                    <p class="lead"><strong>{{feed.title}}</strong></p>
                    {{feed.creator.firstName}} {{feed.creator.lastName}} from {{feed.creator.city}} {{feed.creator.state}}
                </div>

            </div>
        </div>
        <div class="col-xs-11">
            <div class="row row-gutter-bottom">
                <div class="col-xs-12">
                    {{feed.description}}
                </div>
            </div>
        </div>
    </div>
    <div class="row row-gutter-bottom">
        <div class="col-xs-12">
            <button class="btn btn-cys">Reply</button>
        </div>
    </div>
{{/each}}



