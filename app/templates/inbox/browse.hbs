<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        <img src="assets/images/inbox.png" />
        <h1>Inbox</h1>
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default" {{action 'refresh' }}>Refresh</button>
            <button type="button" class="btn btn-default" {{action 'markRead' }}>Mark all as read</button>
            <button type="button" {{bind-attr class=":btn :btn-default hasSelection::collapse" }} {{action 'deleteEmail' }}>Delete</button>
            <button type="button" {{bind-attr class=":btn :btn-default hasSelection::collapse" }} {{action 'markReadSelected' }}>Mark selected as read</button>
        </div>
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        <table class="table table-hover">
            <thead>
            <th>{{input type="checkbox" action="checkAll" checked=isAllChecked }}</th>
            <th>From</th>
            <th>Title</th>
            <th>Body</th>
            <th>Date</th>
            </thead>
            <tbody>
                {{#each msg in model}}
                <tr {{bind-attr class="isRead::bold" }}>
                    <td>{{input type="checkbox" checked=msg.isChecked }}</td>
                    <td>{{#link-to 'inbox.detail' msg.id }}{{msg.from.fullName}}{{/link-to}}</td>
                    <td>{{#link-to 'inbox.detail' msg.id }}{{msg.subjectReduced}}{{/link-to}}</td>
                    <td>{{msg.bodyReduced}}</td>
                    <td>{{msg.createdDateShortDateString}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
