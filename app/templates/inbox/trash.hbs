<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        <img src="assets/images/inbox.png" />
        <h2>Trash</h2>
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default" {{action 'markRead' }}>Mark all as read</button>
            <button type="button" {{bind-attr class=":btn :btn-default hasSelection::collapse" }} {{action 'purgeEmail' }}>Purge</button>
            <button type="button" {{bind-attr class=":btn :btn-default hasSelection::collapse" }} {{action 'markReadSelected' }}>Mark selected as read</button>
        </div>
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        <table class="table">
            <thead>
            <th>{{input type="checkbox" action="checkAll" checked=isAllChecked }}</th>
            <th>From</th>
            <th>Title</th>
            <th>Body</th>
            <th>Date</th>
            </thead>
            <tbody>
                {{#each model as |msg|}}
                <tr {{bind-attr class="isRead::bold" }}>
                    <td>{{input type="checkbox" checked=msg.isChecked }}</td>
                    <td>{{#link-to 'inbox.detail' msg.id }}{{msg.from.displayName}}{{/link-to}}</td>
                    <td>{{#link-to 'inbox.detail' msg.id }}{{shorten-string msg.subject 50}}{{/link-to}}</td>
                    <td>{{#link-to 'inbox.detail' msg.id }}{{shorten-string msg.body 50}}{{/link-to}}</td>
                    <td>{{#link-to 'inbox.detail' msg.id }}{{formatted-date msg.createdDate 'LL'}}{{/link-to}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

