<div class="row row-gutter-bottom row-gutter-top">
    <div class="col-xs-12">

      {{#single-select group="type" btnClassName="btn btn-cys" onSelectedHookAction="loadByType" selectedValue=currentType value="all"}}
          All
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" onSelectedHookAction="loadByType" selectedValue=currentType value="toy"}}
          Toys
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" onSelectedHookAction="loadByType" selectedValue=currentType value="cloth"}}
          Cloths
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" onSelectedHookAction="loadByType" selectedValue=currentType value="book"}}
          Books
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" onSelectedHookAction="loadByType" selectedValue=currentType value="equipment"}}
          Equipments
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" onSelectedHookAction="loadByType" selectedValue=currentType value="furniture"}}
          Furnitures
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" onSelectedHookAction="loadByType" selectedValue=currentType value="misc"}}
          Misc
      {{/single-select}}

    </div>
</div>

<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-md-4">
      {{#single-select group="status" btnClassName="btn-cys-secondary" onSelectedHookAction="loadByStatus" selectedValue=currentStatus value="all"}}
          All
      {{/single-select}}

      {{#single-select group="status" btnClassName="btn-cys-secondary" onSelectedHookAction="loadByStatus" selectedValue=currentStatus value="sale"}}
          Sale
      {{/single-select}}

      {{#single-select group="status" btnClassName="btn-cys-secondary" onSelectedHookAction="loadByStatus" selectedValue=currentStatus value="upcoming"}}
          Swap
      {{/single-select}}

      {{#single-select group="status" btnClassName="btn-cys-secondary" onSelectedHookAction="loadByStatus" selectedValue=currentStatus value="past"}}
          Free
      {{/single-select}}

      {{#single-select group="status" btnClassName="btn-cys-secondary" onSelectedHookAction="loadByStatus" selectedValue=currentStatus value="timeless"}}
          Loan
      {{/single-select}}
    </div>
    <div class="col-xs-3 col-md-2">
        <button class="btn btn-link btn-sm" {{action "toggleAdvancedSearch" }}>{{searchToggleText}}</button>
    </div>
</div>

{{#if showAdvancedSearch}}
<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        {{filter-selector model=allConditions apiFilterSelected="loadByCondition"}}
    </div>
</div>
{{/if}}

<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        <table class="table table-hover">
            <thead>
            <th></th>
            <th>Title</th>
            <th>Type</th>
            <th>Price</th>
            <th>Posted Date</th>
            <th>Age Range</th>
            </thead>
            <tbody>
                {{#each item in model}}
                <tr>
                    <td>{{view "previewImage"width="80" height="80" class="img-responsive img-thumbnail" src=item.availableImage}}</td>
                    <td>{{item.title}}</td>
                    <td>{{display-text item.type allTypes}}</td>
                    <td>{{item.price}}</td>
                    <td>{{formatted-date item.createdDate 'LL'}}</td>
                    <td>{{item.ageRange}}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="...">
                            {{#link-to 'item.show' item class="btn btn-default"}}Detail{{/link-to}}
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

