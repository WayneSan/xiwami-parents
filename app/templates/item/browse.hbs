<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        {{filter-selector model=allTypes apiFilterSelected="loadByType" showMisc="1"}}
    </div>
</div>

<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-md-4">
        {{filter-selector model=allStatus apiFilterSelected="loadByStatus"}}
    </div>
    <div class="col-xs-3 col-md-2">
        <button class="btn btn-link btn-sm" {{action "toggleAdvancedSearch" }}>{{searchToggleText}}</button>
    </div>
</div>

{{#if showAdvancedSearch}}
<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        {{filter-selector model=allConditions apiFilterSelected="loadByCondition"}}
    </div>
</div>
{{/if}}

<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        <table class="table table-hover">
            <thead>
            <th></th>
            <th>Title</th>
            <th>Type</th>
            <th>Price</th>
            <th>Posted Date</th>
            <th>Age Range</th>
            </thead>
            <tbody>
                {{#each item in model}}
                <tr>
                    <td>{{view "previewImage"width="80" height="80" class="img-responsive img-thumbnail" src=item.availableImage}}</td>
                    <td>{{item.title}}</td>
                    <td>{{display-text item.type allTypes}}</td>
                    <td>{{item.price}}</td>
                    <td>{{formatted-date item.createdDate 'LL'}}</td>
                    <td>{{item.ageRange}}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="...">
                            {{#link-to 'item.show' item class="btn btn-default"}}Detail{{/link-to}}
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{#if model}}
<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        <button class="btn btn-info btn-lg" {{action "loadPrevPage"}}>Prev Page</button>
        {{view "select" class="btn btn-default dropdown-toggle" prompt="Page Size" content=allPageSizes value=pageSize}}
        <button class="btn btn-info btn-lg" {{action "loadNextPage"}}>Next Page</button>
    </div>
</div>
{{/if}}

