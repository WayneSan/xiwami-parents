<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        <h2>Secure Login</h2>
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-lg-12">
        <div>
            <span class="lead">
                Login with <a {{ action 'authenticateWithFacebook' }} class="alert-link" style="cursor: pointer;"><i class="fa fa-facebook-square"></i> Facebook</a>

            </span>
            (watch for the blocked browser window)
        </div>
        <!--or <a {{ action 'authenticateWithGooglePlus' }} class="alert-link" style="cursor: pointer;"><i class="fa fa-google-plus-square"></i> Google+</a>.-->
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12">
        <hr style="border-width:4px" />
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
        {{! login form; the fields must be named "identification" and "password"; the controller action is "authenticate" }}
        <p>Or login using your Siwimi account</p>
        <form {{action 'authenticate' on='submit' }}>
            <div class="form-group">
                <label for="identification">Email</label>
                {{input id='identification' placeholder='Enter Email' class='form-control' value=email size="80"}}
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                {{input id='password' placeholder='Enter Password' class='form-control' type='password' value=password size="80"}}
            </div>
            <button type="submit" {{action "authenticateCustom" }} class="btn btn-cys" {{bind-attr disabled=disabled}}>Login</button>
            <div>
                Don't have a Siwimi account yet?  {{#link-to 'register.signup' }}Sign up here{{/link-to}}.
            </div>

        </form>
    </div>
</div>
