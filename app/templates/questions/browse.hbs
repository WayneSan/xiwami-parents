<div class="row row-gutter-bottom row-gutter-top">
    <div class="col-lg-12">
        <div class="list-group">
            {{#if model}}
                <div class="row event-list">
                    <div class="col-xs-12 col-sm-2 col-md-1">

                    </div>
                    <div class="col-xs-12 col-sm-2 col-md-1">
                        <h4 class="list-group-item-heading">
                            Replies
                        </h4>
                    </div>
                    <div class="col-xs-12 col-sm-2 col-md-1">
                        <h4 class="list-group-item-heading">
                            Views
                        </h4>
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-6">
                        <h4 class="list-group-item-heading">
                            Topic
                        </h4>
                    </div>
                    <div class="col-xs-12 col-sm-2 col-md-3">
                        <h4 class="list-group-item-heading">
                            Created
                        </h4>
                    </div>
                </div>
                {{#each obj in model}}
                    <div class="row event-list">
                        <div class="col-xs-12 col-sm-2 col-md-1">
                            {{#link-to 'member.show' obj.creator}}
                                {{view "previewImage" width="50" height="50" class="img-responsive" src=obj.creator.availableImage}}
                            {{/link-to}}
                        </div>
                        <div class="col-xs-12 col-sm-2 col-md-1">
                            <p class="list-group-item-text">
                                {{#link-to 'questions.show' obj.id}}
                                    {{obj.answers.length}}
                                {{/link-to}}
                            </p>
                        </div>
                        <div class="col-xs-12 col-sm-2 col-md-1">
                            <p class="list-group-item-text">
                                {{#link-to 'questions.show' obj.id}}
                                    {{obj.viewCount}}
                                {{/link-to}}
                            </p>
                        </div>
                        <div class="col-xs-12 col-sm-4 col-md-6">
                            <p class="list-group-item-text lead">
                                {{#link-to 'questions.show' obj.id}}{{obj.title}}{{/link-to}}
                            </p>
                            <p class="list-group-item-text">
                                {{#link-to 'questions.show' obj.id}}
                                    {{obj.description}}
                                {{/link-to}}
                            </p>
                        </div>
                        <div class="col-xs-12 col-sm-2 col-md-3">
                            <p class="list-group-item-text">
                                {{#link-to 'questions.show' obj.id}}
                                    {{formatted-date obj.createdDate 'LL'}}
                                {{/link-to}}
                            </p>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <p class="lead">There are no questions found under the selection criteria.</p>
            {{/if}}
        </div>
    </div>
</div>
