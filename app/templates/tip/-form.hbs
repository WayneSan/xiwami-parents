<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label><span class="required">*</span>Title:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        {{input class="form-control" width="80" placeholder="10 words or less" value=title size="80"}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>
            <span class="required">*</span>Description:
        </label>
    </div>
    <div class="col-xs-10 col-md-6">
        {{textarea class="form-control" placeholder="Description" rows="5" cols="60" value=description}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>Type</label>
    </div>
    <div class="col-xs-10">
        <div class="control-group">
            <div class="btn-group" data-toggle="buttons-radio">

                {{#view "radio-button-view" name="deal" selectionBinding="type" value="deal" }}Deal{{/view}}

                {{#view "radio-button-view" name="education" selectionBinding="type" value="education" }}Education{{/view}}

                {{#view "radio-button-view" name="health" selectionBinding="type" value="health"}}Health{{/view}}

                {{#view "radio-button-view" name="entertainment" selectionBinding="type" value="entertainment" }}Entertainment{{/view}}

                {{#view "radio-button-view" name="misc" selectionBinding="type" value="misc" }}Misc{{/view}}

            </div>
        </div>
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>
            Expired:
        </label>
    </div>
    <div class="col-xs-2">
        {{bs-datetimepicker date=expiredDateMoment format='YYYY-MM-DD'}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>
            Url:
        </label>
    </div>
    <div class="col-xs-10 col-md-8">
        {{input class="form-control" placeholder="web url if there is any" value=url size="60"}}
        <button class="btn btn-primary btn-sm" type="button" {{action "preview" }}>
            Preview
        </button>
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-xs-offset-2  col-md-offset-1">
        <div style="width:30px; height:20px">
            <iframe id="frame" {{bind-attr src=url}}></iframe>
        </div>
    </div>
    <div class="col-xs-4">
        {{textarea class="form-control" readonly="true" rows="4" cols="60" value=previewText}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>City:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        {{input class="edit_box" value=city}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-2 col-md-1">
        <label>State:</label>
    </div>
    <div class="col-xs-10 col-md-6">
        {{view "select" class="btn btn-default dropdown-toggle" prompt="Select State" content=allStates value=state}}
    </div>
</div>
<div class="clearfix visible-xs-block"></div>
<div class="row row-xs-height">
    <div class="col-xs-12">
    </div>
</div>
<div class="clearfix visible-xs-block"></div>
<div class="row row-xs-height">
    <div class="col-xs-10 col-xs-offset-2 col-md-6 col-md-offset-1">
        <button type="button" class="btn btn-primary btn-sm" {{action "save" }} {{bind-attr disabled=disabled}}>Save</button>
        <button type="button" class="btn btn-link btn-sm" {{action "cancel" }}>Cancel</button>
    </div>
</div>