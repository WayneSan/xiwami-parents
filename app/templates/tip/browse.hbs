<h1>Search tips</h1>
<div class="row row-xs-height">
    <div class="col-lg-12">
        <div class="btn-toolbar" role="toolbar" aria-label="tiptoolbar">
            <div class="btn-group" data-toggle="buttons">
                <a class="btn btn-info active" data-toggle="tab" {{ action 'setStatusFilter' 'all' }}>
                    <input type="radio">All
                </a>
                <a class="btn btn-info" data-toggle="tab" {{ action 'setStatusFilter' 'active' }}>
                    <input type="radio">Active
                </a>
                <a class="btn btn-info" data-toggle="tab" {{ action 'setStatusFilter' 'expired' }}>
                    <input type="radio">Expired
                </a>
            </div>
            
        </div>
        
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-xs-12">
        {{filter-selector model=allTypes apiFilterSelected="loadByType"}}
    </div>
</div>

<div class="row row-xs-height">
    <div class="col-xs-12">
        <table class="table">
            <thead>
            <th>Title</th>
            <th>Description</th>
            <th>Link</th>
            <th>Expired Date</th>
            <th>Action</th>
            </thead>
            <tbody>
                {{#each tip in model}}
                <tr>
                    <td>{{tip.titleReduced}}</td>
                    <td>{{tip.descriptionReduced}}</td>
                    <td><a {{bind-attr href=tip.url }} target="_blank">{{tip.urlReduced}}</a></td>
                    <td>{{formatted-date tip.expiredDate 'LL'}}</td>
                    <td>
                        {{#link-to 'tip.show' tip}}Detail{{/link-to}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
