<div class="row row-gutter-bottom row-gutter-top">
    <div class="col-xs-12">

      {{#single-select group="type" btnClassName="btn btn-cys" selectedValue=currentType value="all"}}
          All
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" selectedValue=currentType value="deal"}}
          Deals
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" selectedValue=currentType value="cooking"}}
          Cooking
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" selectedValue=currentType value="health"}}
          Health
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" selectedValue=currentType value="education"}}
          Education
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" selectedValue=currentType value="entertainment"}}
          Entertainment
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" selectedValue=currentType value="travel"}}
          Travel
      {{/single-select}}

      {{#single-select group="type" btnClassName="btn btn-cys" selectedValue=currentType value="misc"}}
          Misc
      {{/single-select}}

    </div>
</div>

<div class="row row-gutter-bottom">
    <div class="col-lg-12">

      {{#single-select group="status" btnClassName="btn-cys-secondary" selectedValue=currentStatus value="all"}}
          All
      {{/single-select}}

      {{#single-select group="status" btnClassName="btn-cys-secondary" selectedValue=currentStatus value="active"}}
          Active
      {{/single-select}}

      {{#single-select group="status" btnClassName="btn-cys-secondary" selectedValue=currentStatus value="expired"}}
          Expired
      {{/single-select}}

    </div>
</div>

<div class="row main-content">
    <div class="col-xs-12">
        <div class="list-group">
          {{#if model}}
            {{#each tip in model}}
                <div class="row event-list">
                    <div class="col-xs-4 col-md-2">
                      {{#link-to 'activity.show' tip}}
                        {{view "previewImage" width="150" height="150" class="img-thumbnail img-responsive" src=tip.availableImage}}
                      {{/link-to}}
                    </div>
                    <div class="col-xs-8 col-md-4">
                        <h4 class="list-group-item-heading">{{#link-to 'tip.show' tip}}{{tip.title}}{{/link-to}}</h4>
                    </div>
                    <div class="col-xs-12 col-md-3">
                        <p class="list-group-item-text">
                            {{tip.descriptionReduced}}
                        </p>
                    </div>
                    <div class="col-xs-12 col-md-1">
                      {{#if tip.type}}
                          <div class="tag-default">
                            {{display-text tip.type allTypes}}
                          </div>
                      {{/if}}
                    </div>
                </div>
            {{/each}}
          {{else}}
              <p class="lead">There is no tip found under the selection criteria.</p>
          {{/if}}
        </div>
    </div>
</div>

{{#if queryCount}}
    <div class="row row-gutter-bottom">
        <div class="col-xs-12 col-md-11">
            <nav>
                <ul class="pagination">
                    <li class={{isDisabled}}>
                        <a {{action "loadPrevPage"}} aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                  {{#each page in pages}}
                      <li><a {{action "loadPage" page}}>{{page}}</a></li>
                  {{/each}}
                    <li class={{isDisabled}}>
                        <a {{action "loadNextPage"}} aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col-xs-12 col-md-1">
            <nav>
                <div class="pagination">
                  {{view "select" class="btn-cys-inverse dropdown-toggle" content=allPageSizes value=decoratedPageSize}}
                </div>
            </nav>
        </div>
    </div>
{{/if}}