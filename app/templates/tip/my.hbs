<h2>My Tips</h2>

<div class="row row-xs-height">
    <div class="col-xs-12">
        {{#link-to 'tip.new' class="btn btn-primary"}}Add New Tip{{/link-to}}
    </div>
</div>

<div class="row row-xs-height">
    <div class="col-xs-12">
        <div class="btn-group" data-toggle="buttons">
            <a class="btn btn-info active" data-toggle="tab" {{ action 'loadData' 'all' }}>
                <input type="radio">All
            </a>
            <a class="btn btn-info" data-toggle="tab" {{ action 'loadData' 'active' }}>
                <input type="radio">Active
            </a>
            <a class="btn btn-info" data-toggle="tab" {{ action 'loadData' 'expired' }}>
                <input type="radio">Expired
            </a>
        </div>
    </div>
</div>

<div class="row row-xs-height">
    <div class="col-xs-12">
        <table class="table table-hover">
            <thead>
            <th></th>
            <th>title</th>
            <th>Description</th>
            <th>Type</th>
            <th>Expired Date</th>
            <th>Action</th>
            </thead>
            <tbody>
                {{#each tip in model}}
                <tr>
                    <th>{{view "previewImage" width="80" height="80" class="img-responsive img-thumbnail" src=tip.availableImage}}</th>
                    <td>{{tip.titleReduced}}</td>
                    <td>{{tip.descriptionReduced}}</td>
                    <td>{{display-text tip.type allTypes}}</td>
                    <td>{{formatted-date tip.expiredDate 'LL'}}</td>
                    <td>
                        {{#link-to 'tip.show' tip}}Detail{{/link-to}}
                        &nbsp;|&nbsp;
                        <a href="#" {{action "openDeleteDialog" tip.id target="view" bubbles=false }}>Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div id="dialog-confirm-delete" title="Delete a tip?">
    <p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>This tip will be deleted. Are you sure?</p>
</div>
