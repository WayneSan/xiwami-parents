<div class="row row-gutter-bottom">
    <div class="col-xs-2 col-md-1">

    </div>
    <div class="col-xs-10 col-md-11">
        <h1>Tip Preferences</h1>
        <h2>We'll periodically send you emails that match the preferences below</h2>
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-2 col-md-1">
        <label>Sources</label>
</div>
    <div class="col-xs-10 col-md-11">
        {{input type="checkbox" checked=prefTipOtherFamily}}
        I am interested in tips generated from other families whome I haven't met yet
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-2 col-md-1">
        <label>Types</label>
    </div>
    <div class="col-xs-10 col-md-11">
        <div class="control-group">
            <div class="btn-group" data-toggle="buttons-radio">

                {{input type="checkbox" checked=prefTipTypeDeal}}Deal

                {{input type="checkbox" checked=prefTipTypeEducation}}Education

                {{input type="checkbox" checked=prefTipTypeHealth}}Health

                {{input type="checkbox" checked=prefTipTypeEntertainment}}Entertainment

                {{input type="checkbox" checked=prefTipTypeMisc}}Misc

            </div>
        </div>
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-2 col-md-1">
        <label>Keywords</label>
    </div>
    <div class="col-xs-10 col-md-11">
        {{input value=prefTipKeyWords}}
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-10 col-xs-offset-2 col-md-11 col-md-offset-1">
        <button type="button" class="btn btn-primary btn-sm" {{action "save" }} {{bind-attr disabled=disabled}}>Save</button>
        <button type="button" class="btn btn-link btn-sm" {{action "cancel" }}>Cancel</button>
    </div>
</div>
