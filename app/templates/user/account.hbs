<div class="row row-gutter-bottom row-gutter-top">
    <div class="col-xs-12">
        <ol class="breadcrumb">
            <li>{{#link-to 'index'}}Home{{/link-to}}</li>
            <li class="active">User Account Information</li>
        </ol>
    </div>
</div>

<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-sm-3 col-md-2">
        <label>
            Your location:
        </label>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-10">
        <p class="lead">The location you've set here will be the main location for the data we present to you.</p>
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-sm-3 col-md-2">
        <span class="required">*</span>
        <label >
            City:
        </label>
    </div>
    <div class="col-xs-12 col-sm-6">
        {{input class="edit_box" size="40" value=model.city}}
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-sm-3 col-md-2">
        <span class="required">*</span>
        <label>
            State:
        </label>
    </div>
    <div class="col-xs-12 col-sm-6">
        {{input class="edit_box" size="40" value=model.state}}
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-md-7">
        <hr>
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-sm-offset-3 col-md-offset-2">
        <button class="btn btn-primary btn-sm" {{action "importFromFacebook" }}>
            Import my profile from facebook
        </button>
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-sm-3 col-md-2">
        <label>
            User Id:
        </label>
    </div>
    <div class="col-xs-12 col-sm-6">
        {{model.id}}
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-sm-3 col-md-2">
        <label>
            Facebook Id:
        </label>
    </div>
    <div class="col-xs-12 col-sm-6">
        {{input class="edit_box" size="40" value=model.facebookId}}
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-sm-3 col-md-2">
        <label>
            Email:
        </label>
    </div>
    <div class="col-xs-12 col-sm-6">
        {{input type="email" class="edit_box" size="40" value=model.email}}
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-sm-3 col-md-2">
        <label>
            Change Passwords:
        </label>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-10">
        <p>Setting the passwords below allows you to login using email and password</p>
    </div>
</div>
<div {{bind-attr class=":row :row-gutter-bottom hasOldPassword::collapse" }}>
    <div class="col-xs-12 col-sm-3 col-md-2">
        <label>
            Old Password:
        </label>
    </div>
    <div class="col-xs-12 col-sm-6">
        {{input class="edit_box" type="password" size="40" value=oldPassword}}
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-sm-3 col-md-2">
        <label>
            New Password:
        </label>
    </div>
    <div class="col-xs-12 col-sm-6">
        {{input class="edit_box" type="password" size="40" value=newPassword}}
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-sm-3 col-md-2">
        <label>
            Confirm New Password:
        </label>
    </div>
    <div class="col-xs-12 col-sm-6">
        {{input class="edit_box" type="password" size="40" value=newPassword2}}
    </div>
</div>
<div class="row row-gutter-bottom">
    <div class="col-xs-12 col-sm-offset-3 col-md-offset-2">
        <button class="btn btn-cys" {{action "save" }}>
            Save
        </button>
        <button class="btn btn-link" {{action "cancel" }}>
            Cancel
        </button>
    </div>
</div>