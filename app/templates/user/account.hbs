    <div class="row row-xs-height">
        <div class="col-xs-10 col-xs-offset-2">
            <button class="btn btn-primary btn-sm" {{action "importFromFacebook" }} {{bind-attr disabled=disabledImportFacebook}}>
                Import my profile from facebook
            </button>
        </div>
    </div>
    <div class="row row-xs-height">
        <div class="col-xs-2">
            <label>
                User Id:
            </label>
        </div>
        <div class="col-xs-10">
            {{input class="edit_box" size="50" value=id}}
        </div>
    </div>
    <div class="row row-xs-height">
        <div class="col-xs-2">
            <label>
                Facebook Id:
            </label>
        </div>
        <div class="col-xs-10">
            {{input class="edit_box" value=model.facebookId}}
        </div>
    </div>
    <div class="row row-xs-height">
        <div class="col-xs-2">
            <label>
                Email:
            </label>
        </div>
        <div class="col-xs-10">
            {{input class="edit_box" value=email}}
        </div>
    </div>
    <div class="row row-xs-height">
        <div class="col-xs-2">
            <label>
                Password:
            </label>
        </div>
        <div class="col-xs-10">
            {{input class="edit_box" value=password}}
        </div>
    </div>
    <div class="row row-xs-height">
        <div class="col-xs-10 col-xs-offset-2">
            <button class="btn btn-primary btn-sm" {{action "save" }}>
                Save
            </button>
            <button class="btn btn-link btn-sm" {{action "closeModal" }}>
                Cancel
            </button>
        </div>
    </div>


